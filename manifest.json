{
  "manifest_version": 2,
  "name": "Quran channel",
  "version": "0.1",
  "description": "Quran channel is a Chrome extension that helps you to listen to the Holly Quran in any time you want.",
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["<all_urls>"],
      "js": ["./js/index.js"],
      "css": ["./css/style.css"]
    }
  ],
  "background": {
    "scripts": ["./js/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Quran channel",
    "default_icon": "./Photo/Quran_Book.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "./Photo/Quran_Book.png",
    "48": "./Photo/Quran_Book.png",
    "128": "./Photo/Quran_Book.png"
  }
}
